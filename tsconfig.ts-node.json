{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es2015",
		"esModuleInterop": true,
		"outDir": "build",
		"lib": [
			"es2019",
			"dom",
			"dom.iterable"
		],
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": true,
		"strict": true,
		"allowJs": true,
		"baseUrl": ".",
		"importHelpers": true
	},
	"ts-node": {
		"transpileOnly": true
	},
}
